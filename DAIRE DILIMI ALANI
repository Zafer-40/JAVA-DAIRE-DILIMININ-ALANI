        int r ;
        double pi = 3.14 , a;

        Scanner input = new Scanner(System.in);
        System.out.print( " Dairenin yari capini giriniz : ");
        r = input.nextInt();
        System.out.print("Dairenin Merkez Acisini Giriniz :");
        a= input.nextDouble();
        double dda = (pi * (r * r) * a) / 360;
        System.out.println( "Dairenin Diliminin Alani :" + dda);
